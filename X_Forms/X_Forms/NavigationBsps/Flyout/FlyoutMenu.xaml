<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X_Forms.NavigationBsps.Flyout.FlyoutMenu"
             xmlns:pages="clr-namespace:X_Forms.NavigationBsps.Flyout"
            xmlns:local="clr-namespace:X_Forms">
    
    <!--Hauptseite der Flyout-Navigation-->
    
  <FlyoutPage.Flyout>
      <!--Flyout-Menü-->
    <pages:FlyoutMenuFlyout x:Name="FlyoutPage" />
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
          <!--'Startseite' der Flyoutnavigation-->
        <local:MainPage/>
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>